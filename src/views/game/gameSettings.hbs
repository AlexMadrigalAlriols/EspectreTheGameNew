<a href="/ingame"><button class="btn ml-2 mt-2 " style="background-color: #ff6d05; color: #fff;">Volver InGame</button></a>
<div class="col-md-6 mx-auto mt-2">
    <div class="card">
        <div class="card-header">
            <h3>Opciones Generales</h3>
        </div>
        <div class="card-body">
            <form action="/ingame/gameSettings?__method=PUT" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="__method" value="PUT">
                <h5>Año</h5>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="inputGroup-sizing-default">Year on Game:</span>
                    <input type="text" class="form-control" name="year" value="{{game.year}}" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                <h5>Tipo de Mapa</h5>
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupSelect01">Opciones</label>
                    <select class="form-select" id="inputGroupSelect01" name="mapa">
                        <option selected value="ningunoElegido">Elige uno...</option>
                        <option value="/img/background-hero.png">Cartográfico</option>
                        <option value="/img/fantasyMap.png">Fantasia</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-block btnvolver">
                        Guardar Opciones
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>