<nav style="background-color: white;">
<a href="/ingame/all-groups/"><button class="btn ml-2 mt-3 mb-3 btnvolver">Volver Atras</button></a>
</nav>
<div class="col-md-6 mx-auto mt-4">
    <div class="card">
        <div class="card-header">
            <h3>Actividades de {{group.name}}</h3>
        </div>
        <div class="card-body">
        
        {{#each entregas}}
        <div style="display: inline-block;">
        <h5 style="">Actividad</h5>
        <p>{{actividadname}}</p>
        <h5>Comentarios</h5>
        <textarea class="form-control" readonly>{{comentarios}}</textarea>

        </div>



        <form action="/ingame/activity/delete/{{_id}}?__method=DELETE" method="POST" style="display: inline-block;float: right; right: 20px; margin-left: 8px;">
        <input type="hidden" name="__method" value="DELETE">

        <a href="#"><button type="submit" style="float: right; right: 0; display:inline-block;" class="btn-danger">Borrar</button></a>
        </form>
        <a href="/uploads/{{entrega}}" download="{{actividadname}}_{{group.name}}" class="btnvolver"><button class="btnvolver" style="display: inline-block; float:right;">Descargar practica</button></a>
        
        <form action="/entrega/{{_id}}?__method=PUT" method="POST">
        <input type="hidden" name="__method" value="PUT">
        <h5 class="mt-3">Nota</h5>
        <div class="input-group mb-3 mt-3" style="width:45%;">
        <input type="text" class="form-control" name="nota" aria-label="Recipient's username" aria-describedby="button-addon2" value="{{nota}}">
        <button class="btnvolver" type="submit" id="button-addon2" style="border-style: hidden;">Save</button>
        </div>
        </form>
    <hr>
    {{else}}
    <p style="display: inline-block;" class="text-center">There are not activities yet.</p>
    <hr>
    {{/each}}
        </div>
    </div>

</div>