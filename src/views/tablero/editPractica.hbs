<div class="col-md-6 mx-auto mt-2">
    <div class="card">
        <div class="card-header">
            <h3>Editar Entrega</h3>
        </div>
        <div class="card-body">
            <form action="/ingame/edit-entrega/{{entrega._id}}?__method=PUT" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="__method" value="PUT">

            <div class="input-group mb-3">
                <span class="input-group-text">Comentarios</span>
                <textarea class="form-control" name="comments" aria-label="With textarea">{{entrega.comentarios}}</textarea>
            </div>

            <div class="input-group mb-2">
                <label style="color: red; font-size:12px; position:absolute; margin-bottom: 2rem;">Vuelve a subir el archivo que quieres editar.</label>
                <label class="input-group-text" for="inputGroupFile01" style="margin-top: 2rem;">Subir</label>
                <input type="file" name="file" class="form-control" id="inputGroupFile01" style="margin-top: 2rem;">
            </div>
        
		</div>


                <div class="form-group">
                    <button class="btn btn-block btnvolver" type="submit">
                    Enviar Para Corregir
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>
